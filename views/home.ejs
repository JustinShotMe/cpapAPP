<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CPAP Dashboard</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Gloock&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">

  <link rel="stylesheet" href="/scripts/css/bootstrap.min.css">
  <script src="/scripts/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/icons/font/bootstrap-icons.css">

</head>

<body>
  <div class="container container-fluid">
    <h1>JUSTIN'S CPAP DASHBOARD</h1>
  </div>

  <div>
    <div class="container">
      <canvas id="myChart"></canvas>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


  <script>
    let myChart = document.querySelector("#myChart").getContext('2d');

    let hoursUsed = new Chart(myChart, {
      type: 'bar',
      data: {
        labels: ['Boston', 'Worcester', 'Springfield', 'Lowell', 'Cambridge', 'New Bedford'],
        datasets: [{
          label: 'Population',
          data: [
            617594, 181045, 153060, 106519, 105162, 95072
          ],
          // backgroundColor: 'green'
          backgroundColor: [
            'green', 'red', 'yellow', 'purple', 'pink', 'blue'
          ],
          borderWidth: 1,
          borderColor: '#777',
          hoverBorderWidth: 3,
          hoverBorderColor: '#000'
        }]
      },
      options: {}
    });
  </script>

  <div class="dataContainer row">
    <div class="listContainer col-2">
      <h2>Hours Used</h2>
      <ul>
        <% for (const event of dbData) { %>
        <li>
          <%= event.treatDate %>
          <em>(<%= (event.secUsed / 60 / 60).toFixed(1) %>)</em>
          <% } %>
      </ul>
    </div>

    <div class="listContainer col-2">
      <h2>AHI Count</h2>
      <ul>
        <% for (const event of dbData) { %>
        <li>
          <%= event.treatDate %>
          <em>(<%= event.cntAHI %>)</em>
        </li>
        <% } %>
      </ul>
    </div>

    <div class="listContainer col-6">
      <h2>Breath Count</h2>
      <ul>
        <% for (const event of dbData) { %>
        <li>
          <%= event.treatDate %>
          <!-- test -->
          <em>(<%= event.cntBreath %>)</em>
        </li>
        <% } %>
      </ul>
    </div>


</body>

</html>